/*
 * Example 14: Seqera Platform Deep Links
 *
 * Automatically adds a "View in Seqera Platform" button
 * to all Slack notifications when running through
 * Seqera Platform. No extra config needed for cloud users.
 */

plugins {
    id 'nf-slack'
}

slack {
    enabled = true
    bot {
        token = System.getenv('SLACK_BOT_TOKEN')
        channel = '#scidev-slacktest'
    }
    seqeraPlatform {
        enabled = true
    }
}
