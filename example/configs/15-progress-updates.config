/*
 * Example 15: Progress Updates
 *
 * Updates the start message in-place with task completion
 * counts at regular intervals during workflow execution.
 */

plugins {
    id 'nf-slack'
}

slack {
    enabled = true
    bot {
        token = System.getenv('SLACK_BOT_TOKEN')
        channel = '#pipeline-notifications'
    }
    onProgress {
        enabled = true
        interval = '2m'    // Update every 2 minutes
    }
}
