/*
 * EXAMPLE 7: Footer Control - Customize Timestamp Display
 *
 * Control whether messages include a timestamp footer.
 * Useful for reducing visual clutter when timestamps aren't needed.
 *
 * New features in this example:
 * - showFooter: control timestamp footer display per event type
 */

plugins {
    id 'nf-slack@0.4.0'
}

slack {
    // Option A: Bot User
    bot {
        token = System.getenv('SLACK_BOT_TOKEN')
        channel = System.getenv('SLACK_CHANNEL_ID')
    }

    // Option B: Webhook
    // webhook {
    //     url = System.getenv('SLACK_WEBHOOK_URL')
    // }

    // Control footer display per event
    onStart {
        enabled = true
        showFooter = true    // Show timestamp on start (default)
    }

    onComplete {
        enabled = true
        showFooter = false   // Hide footer on completion for cleaner look
    }

    onError {
        enabled = true
        showFooter = true    // Show timestamp on errors for debugging
    }
}

// Use case: Reduce visual clutter by hiding footers on routine completions
