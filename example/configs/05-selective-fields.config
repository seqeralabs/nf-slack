plugins {
    id 'nf-slack@0.5.0'
}

slack {
    enabled = true
    bot {
        token = System.getenv("SLACK_BOT_TOKEN")
        channel = System.getenv("SLACK_CHANNEL_ID")
    }

    onStart {
        includeFields = ['runName', 'status']
        showFooter = false
    }

    onComplete {
        includeFields = ['runName', 'duration', 'status']
        showFooter = false
    }

    onError {
        includeFields = ['runName', 'duration', 'errorMessage', 'failedProcess']
        showFooter = false
    }
    useThreads = false
}
