/*
 * Example 12: Emoji Reactions
 *
 * Adds emoji reactions to the pipeline start message
 * to visually indicate workflow status.
 * üöÄ on start, ‚úÖ on success, ‚ùå on error.
 */

plugins {
    id 'nf-slack'
}

slack {
    enabled = true
    bot {
        token = System.getenv('SLACK_BOT_TOKEN')
        channel = '#pipeline-notifications'
    }

    // Control which events trigger notifications
    onStart {
        enabled = true
    }

    onComplete {
        enabled = false
    }

    onError {
        enabled = false
    }

    reactions {
        enabled = true
        onStart = 'rocket'
        onSuccess = 'white_check_mark'
        onError = 'x'
    }
}
