/*
 * Example 11: Validate Slack Connection on Startup
 *
 * Validates that the bot token and channel are accessible
 * when the pipeline starts. Set validateOnStartup = false
 * to skip validation.
 */

plugins {
    id 'nf-slack'
}

slack {
    enabled = true
    bot {
        token = System.getenv('SLACK_BOT_TOKEN')
        channel = '#pipeline-notifications'
    }
    validateOnStartup = true
}
